{
  "name": "nfpd",
  "description": "NonFungible Premium Dashboard Alpha",
  "author": {
    "name": "NonFungible Dev Team",
    "email": "alejandro@nonfungible.com",
    "url": "https://nonfungible.com"
  },
  "version": "1.0.2",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "first-install": "yarn expo-electron",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "build": "yarn electron-webpack && yarn electron-builder --dir -c.compression=store --win --publish never",
    "deploy": "yarn electron-webpack && yarn electron-builder --config electron-builder.yml --win --publish always"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/achatainga/nonfungible-premium-dashboard.git"
  },
  "dependencies": {
    "electron-updater": "^4.3.9",
    "expo": "~42.0.1",
    "expo-status-bar": "~1.0.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-42.0.0.tar.gz",
    "react-native-web": "~0.13.12"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@expo/electron-adapter": "^0.0.55",
    "@expo/webpack-config": "^0.12.82",
    "electron": "^6.0.12",
    "electron-builder": "^22.11.7"
  },
  "private": true,
  "build": {
    "extraMetadata": {
      "main": "main.js"
    },
    "files": [
      {
        "from": "dist/main/",
        "to": "./",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "dist/renderer",
        "to": "./",
        "filter": [
          "**/*"
        ]
      },
      "package.json",
      "**/node_modules/**/*"
    ]
  }
}
